    <% people.forEach(person => { %>
    <% if (!currentUser.friends.includes(person._id)) { %>
    <% if(person.coverPhoto) { %>
    <% const url = "/coverPhoto/" + person._id + "/" + person.coverPhoto %>
    <div class="All-container">
        <div class="user-profile">
            <div class="user-cover-photo"
                style="background-image: url(<%=url%>); opacity:1; background-repeat: no-repeat; background-size: contain; background-size: cover;">
            </div>
            <div class="user-info-box">
                <div class="user-profile-photo">
                    <img src="<%= person.profilePhoto %>" alt="Profile Photo">
                </div>
                <div class="user-info">
                    <h6 style="text-transform: uppercase; max-lines: 1; text-overflow: ellipsis;"><%= person.username %>
                    </h6>
                    <a href="/follow/<%= person._id %>">
                        <button class="follow-btn" data-user-id="<%= person._id %>">Follow</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="All-container">
        <div class="user-profile">
            <div class="user-cover-photo"
                style="background-image: url('/assets/images/defaultCover/defaultCover.jpg');  background-repeat: no-repeat; background-size: contain; background-size: cover;">
            </div>
            <div class="user-info-box">
                <div class="user-profile-photo">
                    <img src="<%= person.profilePhoto %>" alt="Profile Photo">
                </div>
                <div class="user-info">
                    <h6 style="text-transform: uppercase; max-lines: 1; text-overflow: ellipsis;"><%= person.username %></h6>
                    <a href="/follow/<%= person._id %>">
                        <button class="follow-btn" data-user-id="<%= person._id %>">Follow</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
