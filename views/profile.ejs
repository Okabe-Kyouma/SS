<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<style>
    body {
        overflow-x: hidden;
    }

    .post-des {
        text-align: center;
        text-decoration: underline;
        text-transform: uppercase;
    }

    .post {
        margin-top: 20px;
        text-align: center;
    }

    .row {
        border: 2px solid black;
        height: 8vw;
        width: 98.5vh;
    }

    h2 {
        text-align: center;
    }

    .cover-photo-div {
        height: 20vh;
        border: 2px solid pink;
        margin: 20px;
    }

    .profile-photo-div {
        border-radius: 50%;
        height: 50vh;
        width: 30vw;
        margin: 90px;
        border: 1px solid orange;
    }
</style>

<body>

    <%- include('C:/Users/Hp/Desktop/Project/views/homepageNav.ejs') %>

    <% console.log('/coverPhoto/' + currentUser._id + '/' + currentUser.coverPhoto); %>


    <div class="profile-container-photo">
        <div class="cover-photo-div">
            <% if(currentUser.coverPhoto) { %>

            <img src="/coverPhoto/<%=currentUser._id%>/<%=currentUser.coverPhoto%>" style="width: 100%; height: 100%;"
                alt="Cover Photo">
            <% } else { %>
            <form action="/profile/coverPhoto" method="post" enctype="multipart/form-data">
                <input type="file" name="cover-image">
                <button class="cover-photo-btn" type="submit">Upload Cover Photo</button>
            </form>
            <% } %>
        </div>

        <div class="profile-photo-div">
            <% if(currentUser.profilePhoto) { %>
            <img src="/profilePhoto/<%=currentUser._id%>/<%=currentUser.profilePhoto%>"
                style="width: 100%; height: 100%;" alt="Cover Photo">
            <%} else { %>
            <form action="/profile/profilePhoto" method="post" enctype="multipart/form-data">
                <input type="file" name="profile-image">
                <button class="profile-photo-btn" type="submit">Upload Profile Photo</button>
            </form>
            <%} %>
        </div>
        <div class="user-posts">
            <h2>Your Posts</h2>
            <% data.forEach(post => { %>
            <div class="post">
                <p class="post-des"><%= post.postDescription %></p>
                <div class="uploaded-image">
                    <img class="post-image" src="/upload/<%= post.author %>/<%= post.image %>"
                        style="width: 20px; height: 20px;" alt="Post Image">
                </div>
                <div class="row">

                </div>
            </div>
            <% }) %>
        </div>
    </div>

</body>

</html>