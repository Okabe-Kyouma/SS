<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <link rel="stylesheet" href="/assets/styles/home.css">
</head>

<body>

    <%- include('C:/Users/Hp/Desktop/Project/views/homepageNav.ejs') %>

    <section class="section">
        <div class="left"></div>

        <div class="mid">

           

                <form action="/post/upload" method="post" enctype="multipart/form-data">

                    <div class="inner-container-mid">



                        <div class="photo-mid">

                            <img class="photo-mid-icon" src="/assets/images/icons/image.png" alt="">
                            <input type="file" name="post-image">

                        </div>

                        <div class="text-mid">

                            <textarea class="text-mid-area" name="postDescription" id="" cols="15" rows="5" placeholder="Type here.."></textarea>


                        </div>

                    </div>

                    <button class="btn-mid" type="submit">Upload</button>

                </form>


                <% if(list && list.length > 0) { %>
                    <% list.forEach(posts => { %>
                        <% posts.forEach(post => { %>
                            <div class="main">
                                <img src="/upload/<%= post.author %>/<%= post.image %>" style="width: 20px; height: 20px;" alt="Post Image">
                                <p><%= post.postDescription %></p>
                            </div>
                        <% }) %>
                    <% }) %>
                <% } %>
                



        </div>

        <div class="right"></div>
    </section>

</body>

</html>